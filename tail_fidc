    origin: origin,
    api_key_id: api_key_id,
    api_key_secret: api_key_secret,
    source: source,
    frequency: 10,
    exclude: true,
    filter: misc_noise,
    showLogs: showLogs,
    scriptonly: false,
    logzio_token: logzio_token,
    realms: realms
})
